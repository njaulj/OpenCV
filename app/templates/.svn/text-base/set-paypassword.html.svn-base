<ion-view hide-tabs="true">
  <ion-header-bar class="bar headbar content-words">
    <label class="title">设置支付密码</label>
  </ion-header-bar>
  <ion-content style="background-color: #f6f5f5;">
    <div class="list password-list">
      <div class="item item-input-inset">
        <label class="item-input-wrapper input-clear">
          <input type="text" placeholder="请输入新密码">
        </label>
      </div>
      <div class="next-button">
        <button class="button button-outline button-light button-small" ui-sref="tabs.setPassword">下一步</button>
      </div>
    </div>
  </ion-content>
</ion-view>